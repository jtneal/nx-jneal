{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-jneal/data-access-games": ["libs/games/data-access/src/index.ts"],
      "@nx-jneal/feature-codes": ["libs/codes/feature/src/index.ts"],
      "@nx-jneal/feature-games": ["libs/games/feature/src/index.ts"],
      "@nx-jneal/feature-home": ["libs/home/feature/src/index.ts"],
      "@nx-jneal/feature-travels": ["libs/travels/feature/src/index.ts"],
      "@nx-jneal/ui-codes": ["libs/codes/ui/src/index.ts"],
      "@nx-jneal/ui-components": ["libs/ui-components/src/index.ts"],
      "@nx-jneal/ui-core": ["libs/ui-core/src/index.ts"],
      "@nx-jneal/ui-games": ["libs/games/ui/src/index.ts"],
      "@nx-jneal/ui-home": ["libs/home/ui/src/index.ts"],
      "@nx-jneal/ui-travels": ["libs/travels/ui/src/index.ts"],
      "@nx-jneal/util-games": ["libs/games/util/src/index.ts"],
      "@nx-jneal/util-shared": ["libs/shared/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
